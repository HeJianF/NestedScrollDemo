<?xml version="1.0" encoding="utf-8"?>
<com.taohuahua.nestedviewdemo.scroll.SwipeLoadLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipe_load_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/button">

    <FrameLayout
        android:id="@+id/refresh_view"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <TextView
            android:id="@+id/tv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="refreshing"
            android:textColor="@color/colorAccent"
            android:textSize="18sp" />
    </FrameLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>

    <FrameLayout
        android:id="@+id/load_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="bottom">

        <TextView
            android:id="@+id/tv_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="loading_more"
            android:textColor="@color/colorAccent"
            android:textSize="18sp" />
    </FrameLayout>

</com.taohuahua.nestedviewdemo.scroll.SwipeLoadLayout>